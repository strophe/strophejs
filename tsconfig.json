{
  "include": [
      "src/**/*"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",

    "allowJs": true,
    "checkJs": true,

    // Generate d.ts files
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,

    "rootDir": "./src",
    "outDir": "./dist/types/",
    "baseUrl": "./src/",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "noImplicitAny": false,

    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
